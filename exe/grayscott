#!/usr/bin/env ruby

require "gray_scott_gtk3"

if ARGV[0]
  module GrayScottGtk3
    MSEC = ARGV[0].to_i
  end
else
  puts 'please specify command-line argument. For example `grayscott 40`'
  exit
end

module GrayScottGtk3 
  class << self
    def run
      xml_path = File.expand_path('../resources/', __dir__)
      Controller.new xml_path
    end
  end
end

GrayScottGtk3.run
